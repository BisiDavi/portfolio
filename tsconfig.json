{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@components/*": ["components/*"],
            "@layout/*": ["layout/*"],
            "@icons/*": ["icons/*"],
            "@styles/*": ["styles/*"],
            "@context/*": ["context/*"]

        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "icons/moonIcon.jsx", "pages/_document.tsx"],
    "exclude": ["node_modules"]
}
